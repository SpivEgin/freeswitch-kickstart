RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://{{ server_id }}/$1 [R,L]

RewriteCond %{SERVER_PORT} 443
{% if server_env == 'development' -%}
RewriteRule ^$ https://{{ server_id }}:9001 [R,L]
{% else -%}
RewriteRule ^$ https://{{ server_id }}/verto-communicator [R,L]
{% endif -%}

